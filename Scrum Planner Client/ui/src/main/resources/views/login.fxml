<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.PasswordField?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:id="root"
          fx:controller="ui.controllers.LoginController"
          alignment="center" hgap="10.0" vgap="10.0">

    <Label fx:id="emailLabel" text="%login.emailLabel" GridPane.rowIndex="0"
           GridPane.columnIndex="0"/>
    <TextField fx:id="emailTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label fx:id="passwordLabel" text="%login.passwordLabel" GridPane.rowIndex="1"
           GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordTextField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button fx:id="loginButton" text="%login.loginButton" GridPane.rowIndex="2"
            GridPane.columnIndex="1" onAction="#handleLogin"/>
</GridPane>