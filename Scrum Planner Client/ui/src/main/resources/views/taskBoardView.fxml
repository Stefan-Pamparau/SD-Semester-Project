<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.layout.GridPane?>
<?import ui.controllers.customControllers.StoryCardController?>
<?import ui.controllers.customControllers.TaskCardController?>
<?import ui.controllers.customControllers.TaskPanelController?>
<?import ui.controllers.customControllers.TransitionController?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:id="root"
          fx:controller="ui.controllers.TaskBoardView"
          hgap="10.0" vgap="10.0">

    <MenuBar fx:id="optionsMenuBar" GridPane.rowIndex="0" GridPane.columnIndex="0"
             GridPane.columnSpan="10">
        <TransitionController fx:id="transitionController" text="%transitionController"/>
        <TaskPanelController fx:id="taskPanelController" text="%taskBoardView.taskPanelController"/>
        <StoryCardController fx:id="storyCardController" text="%taskBoardView.storyCardController"/>
        <TaskCardController fx:id="taskCardController" text="%taskBoardView.taskCardController"/>
    </MenuBar>

</GridPane>